@model Chat

<div class="chat-body">
    @foreach(var message in Model.Messages)
    {
        <div class="message">
            <header>@message.Name:</header>
            <p>@message.Text</p>
            <footer>@message.SentAt</footer>
        </div>
    }
</div>
<form class="chat-input" asp-controller="Home" asp-action="SendMessage">
    <input type="hidden" name="chat" value="@Model">
    <input type="text" name="message" id="message-input">
    <button type="submit">Send</button>
</form>