<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ChatApp</title>

    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>

    <div class="navbar">
        <a class="chat-title"><strong>ChatApp</strong></a>
    </div>
   
    <div class="main">
        <div class="side-menu">
            @if(User.Identity.IsAuthenticated)
            {
                <a class="room-button" href="#">
                    Room
                </a>
                <a class="room-button" href="@Url.Action("CreateRoom", "Home")">
                    <strong>+</strong>
                </a>
                <a class="room-button" href="@Url.Action("Logout", "Account")">
                    Logout
                </a>
            }
            else
            {
                <a class="room-button" href="@Url.Action("Login", "Account")">
                    Log in
                </a>
                <a class="room-button" href="@Url.Action("Register", "Account")">
                    Register
                </a>
            }
        </div>
        <div class="chat">
            @RenderBody()
        </div>
        
    </div>
</body>
</html>